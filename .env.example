# Kubernetes Cluster Health Check - Environment Configuration
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# 기관 정보
ORGANIZATION="한국수자원공사"
AUTHOR_NAME="기술운영팀"
REPORT_DATE=""  # 비워두면 오늘 날짜 자동 설정
REPORT_VERSION="1.0"

# 점검 확인 정보 (커버 페이지)
INSPECTOR_NAME=""  # 작성자 이름
INSPECTOR_DEPT=""  # 작성자 소속
MANAGER_NAME=""    # 담당자 이름
MANAGER_DEPT=""    # 담당자 소속

# Runway 플랫폼 정보 (자동 감지 실패 시 수동 설정)
RUNWAY_VERSION=""
RUNWAY_INSTALLED=""  # "설치됨" 또는 "미설치"

# Kubernetes 클러스터 정보 (자동 감지 실패 시 수동 설정)
K8S_VERSION=""
CNI_TYPE=""  # "Cilium", "Calico", "Flannel" 등
GPU_OPERATOR_STATUS=""  # "설치됨" 또는 "미설치"

# 보고서 출력 디렉토리
OUTPUT_DIR="./reports"

# kubectl 타임아웃 (초)
KUBECTL_TIMEOUT=5

# GPU 모니터링 활성화
ENABLE_GPU_MONITORING=true

# 추가 커스텀 설정
# CUSTOM_NOTE=""
